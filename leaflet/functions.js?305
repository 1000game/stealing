function showloading(){document.getElementById("loading").style.visibility="visible"}
function hideloading(){document.getElementById("loading").style.visibility="hidden"}
function SelectToTime(){if(type!="forecast")while(document.getElementById("hourtest").length>+(localStorage.options_n||36))document.getElementById("hourtest")[document.getElementById("hourtest").length-1].remove();var select=document.getElementById('hourtest'),hour,i,innerHTML,date;var weekdays=new Array(7);weekdays[0]="الأحد";weekdays[1]="الإثنين";weekdays[2]="الثلاثاء";weekdays[3]="الأربعاء";weekdays[4]="الخميس";weekdays[5]="الجمعة";weekdays[6]="السبت";var dayname;for(i=0;i<select.length;i++){hour=select[i];innerHTML=hour.innerHTML;dayname='';if(!isNaN(+innerHTML)){date=new Date(+innerHTML*1000);if(date.getDay()!=new Date().getDay()){dayname=weekdays[date.getDay()]+" ";}
hour.innerHTML=dayname+date.toLocaleTimeString([],{hour:'2-digit',minute:'2-digit'});}}
document.getElementById('hour').innerHTML=document.getElementById('hourtest').innerHTML;}
function getclosest_athqafi(lat,lng){var maps={"Yanbu":[36.27970896758124,40.384614853404,25.94024580754594,22.41466930717887],"Gassim":[41.94163126700256,46.13077686878875,28.11950254467146,24.60349761799086],"Abha":[40.93768536690105,44.9029501269149,20.04058774133099,16.52239069362039],"Albaha":[39.91518173575686,43.87860466430367,22.0992331863779,18.59691523055435],"Dammam":[48.11986938743279,52.16970146893773,28.32012044163627,24.82589973402562],"Dawadmi":[42.32656772401545,46.4919853355924,26.24990867260398,22.73619697525762],"Hail":[39.86846703110225,44.06433161250928,29.24405189738772,25.72062210717581],"Jazan":[40.84888237822055,44.81386673026933,18.67761799942703,15.21067372035049],"Jeddah":[37.42234928403259,41.46558852344175,23.53954067967936,20.01582419145118],"Jouf":[38.24569168961052,42.53427138361371,31.60053790400627,28.07280272954911],"Riyadh":[44.97241001915098,49.02224210065592,26.7287820061394,23.23456129852875],"Tabuk":[34.76745133019412,39.00289399788618,30.19478024408654,26.645751312023],"Taif":[38.83818146503008,42.76910718044013,23.3083540975543,19.77986644560621,]};var closest="none";var min=99999999999999;var v,centerx,centery,distance;for(var key in maps){v=maps[key];centerx=(v[0]+v[1])/2;centery=(v[2]+v[3])/2;distance=Math.sqrt(Math.pow(centerx-lng,2)+Math.pow(centery-lat,2));if(distance<min){min=distance;closest=key;}}
return closest;}
function setCookie(name,value,days){days=365;var expires="";if(days){var date=new Date();date.setTime(date.getTime()+(days*24*60*60*1000));expires="; expires="+date.toUTCString();}
document.cookie=name+"="+(value||"")+expires+"; path=/";}
